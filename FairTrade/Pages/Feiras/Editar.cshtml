@page
@model FairTrade.Pages.Feiras.EditarModel
@{
}

<br />
<h2>Editar Feira</h2>

@if (Model.erro.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.erro</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}


<form method="POST">
    <input type="hidden" name="id" value="@Model.feiraInfo.id" />
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Nome</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="nome" value="@Model.feiraInfo.nome" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Descrição</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="descricao" value="@Model.feiraInfo.descricao" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Região</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="regiao" value="@Model.feiraInfo.regiao" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Categoria</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="categoria" value="@Model.feiraInfo.categoria" />
        </div>
    </div>

    @if (Model.sucesso.Length > 0)
    {
        <div class="row-mb-3">
            <div class="col-sm-9">
                <div class='alert alert-success alert-dismissible fade show' role='alert'>
                    <strong>@Model.sucesso</strong>
                    <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submeter</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Feiras" role="button">Cancelar</a>
        </div>
    </div>





</form>