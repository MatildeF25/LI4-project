@page
@model FairTrade.Pages.ProdutoModel
@{
}

<br>
<h2>Produto</h2>
<br />

@if (Model.erro.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.erro</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

<br />




<div class="hero-sec">


    <div class="products">
        <div class="card">
            <div class="Title">
                @Model.produtoInfo.nome
            </div>
            <div class="image">
                <img src="@Model.produtoInfo.foto" />
            </div>
            <div class="card-subtitle">
                @Model.produtoInfo.preco€
            </div>
        </div>
    </div>

    <div class="Produto-info">
        <div class="all-info">
            <div class="infos">Rating: @Model.produtoInfo.rating</div>
            <div class="infos">stock: @Model.produtoInfo.stock</div>
            <div class="infos">Descrição: @Model.produtoInfo.descricao</div>
            <div class="infos">Tipo: @Model.produtoInfo.tipo</div>
            <div class="infos">Vendedor Associado: <a href="/Vendedores/Vendedor?id=@Model.vendedorInfo.id">@Model.vendedorInfo.nome</a></div>
            <div class="infos">Feira Associada: <a href="/Feiras/Feira?id=@Model.produtoInfo.id_feira">@Model.feiraInfo.nome</a></div>
        </div>
    </div>


</div>




