@page
@model FairTrade.Pages.Feiras.FeiraModel
@{
}

@if (Model.erro.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.erro</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

<br>
<h2>@Model.feiraInfo.nome</h2>
<br />


<br />
<section class="products">
@foreach (var item in Model.listProdutos){
<div class="card">
    <div class="Title">
        @item.nome
    </div>
    <div class="image">
        <img src="@item.foto" />
    </div>
    <div class="card-subtitle" href="/Vendedores/Vendedor?id=@item.id">
        @item.preco€
    </div>
</div>
<a href="/Produto?id=@item.id"><h6>Compra-me!</h6></a>
}
</section>

