<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FairTrade</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FairTrade.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="navbar-left">
                <a class="navbar-brand"><img src="~/css/logo.png" /></a>
                <div class="HomePage">
                    <a asp-area="" asp-page="/Index">Home</a>
                </div>
@*                <div class="FairsPage">
                    <a asp-area="" asp-page="/Fairs">Fairs</a>
                </div>*@
                <div class="FairsPage">
                    <a asp-area="" asp-page="/Vendedores/Index">Vendedores</a>
                </div>
                <div class="FairsPage">
                    <a asp-area="" asp-page="/Feiras/Index">Feiras</a>
                </div>
            </div>
            <div class="navbar-right">
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - FairTrade - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>